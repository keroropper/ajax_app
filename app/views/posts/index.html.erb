<h1>AjaxApp</h1>
  <%= form_with url: "/posts", method: :post,id: "form" do |form| %>
  <%= form.text_field :content  , id: "content"%> <%# contentを取得するために、idを設置 %>
    <%= form.submit '投稿する' , id: "submit" %> <%# DOMを取得するために、id:"submit"を設置 %>
<% end %>

<div id="list">  <%# 投稿後にメモを追加する要素 %>
</div>

<% @posts.each do |post| %>
  <div class="post" data-id = <%= post.id %> data-check=<%= post.checked %>><%# カスタムデータ属性を追加 %>
    <div class="post-date">
      投稿日時：<%= post.created_at %>
    </div>
    <div class="post-content">
      <%= post.content %>
    </div>
  </div>
<% end %>